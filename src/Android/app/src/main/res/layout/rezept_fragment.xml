<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <TextView
        android:id="@+id/rezeptart_id"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rezeptarten"
        android:textSize="20sp"
        android:textColor="@color/tabtextcolor"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:tag="fruehstueck"
                    android:id="@+id/fruehstueck_id"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/fruehstueck"
                    app:civ_circle_background_color="#E4E4E4"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frühstück"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:tag="brunch"
                    android:id="@+id/brunch_id"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/brunch"
                    app:civ_circle_background_color="#E4E4E4"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brunch"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:tag="kafeetafel"
                android:id="@+id/kafeetafel_id"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/kaffetafel"
                app:civ_circle_background_color="#E4E4E4"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaffeetafel"
                android:layout_gravity="center"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:tag="mittagessen"
                    android:id="@+id/mittagessen_id"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/mittagessen"
                    app:civ_circle_background_color="#E4E4E4"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mittagessen"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:tag="snack"
                    android:id="@+id/snack_id"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/snack"
                    app:civ_circle_background_color="#E4E4E4"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Snack"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:tag="abendessen"
                    android:id="@+id/abendessen_id"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/abendessen"
                    app:civ_circle_background_color="#E4E4E4"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abendessen"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>



</LinearLayout>